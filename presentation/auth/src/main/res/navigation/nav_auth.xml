<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/auth">

    <fragment
        android:id="@+id/auth"
        android:name="com.dkin.chevit.presentation.auth.Auth"
        android:label="Auth"
        tools:layout="@layout/fragment_auth">
        <deepLink app:uri="chevit://auth/onboarding" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.dkin.chevit.presentation.auth.signin.SignIn"
        android:label="SignIn"
        tools:layout="@layout/fragment_sign_in">
        <deepLink app:uri="chevit://auth/signin" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.dkin.chevit.presentation.auth.signup.SignUp"
        android:label="SignUp"
        tools:layout="@layout/fragment_sign_up">
        <deepLink app:uri="chevit://auth/signup" />
    </fragment>
</navigation>
